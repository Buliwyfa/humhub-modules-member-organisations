namespace humhub\modules\organisations\models;

use Yii;
use yii\base\Exception;
use humhub\modules\organisations\models\Organisation;

/**
 * This is an extended model class for table "user".
 *
 */
class User extends \humhub\modules\user\models\User
{

    public function getOrganisation()
    {
        return $this->hasMany(Organisation::className(), ['id' => 'organisation_id'])
                        ->viaTable('organisation_member', ['user_id' => 'id']);

        // return $this->hasOne(Organisation::className(), ['id' => 'user_id']);
    }

}
